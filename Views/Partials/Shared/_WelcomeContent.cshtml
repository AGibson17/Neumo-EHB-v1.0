@using Microsoft.AspNetCore.Mvc.Razor
@{
    Layout = null;
}
@*
   Welcome Content - Redesigned with Shared Values
   Features: Hero section, mission, masonry values grid
*@

<div class="welcome-page">
    <!-- Hero Section -->
    <div class="welcome-hero-banner">
        <div class="welcome-hero-banner__text">
            <div class="welcome-hero-banner__title">
                <i data-lucide="sparkles"></i>
                <h1>Welcome to Neumo!</h1>
            </div>
            <p class="welcome-hero-banner__intro">
                Welcome to the team! Whether you are just starting out or have been with us for years, we're so excited to have you as a part of our team.
            </p>
            <p class="welcome-hero-banner__description">
                You are the foundation of our success. It is through your talent, commitment, and collaboration that we deliver the services our customers depend on and create new opportunities for growth and innovation. We look forward to building the future of Neumo together and wish you every success in your role.
            </p>
        </div>
        <div class="welcome-hero-banner__mascot">
            <img 
                src="~/images/neumo-mascot-navy-downDog-reflect.svg" 
                alt="Neumo mascot" 
            />
        </div>
    </div>

    <!-- Mission Section -->
    <section class="welcome-mission">
        <h2>Our Mission</h2>
        <p>
            Deliver exceptional quality, unparalleled service, and a customer-focused experience that fosters trust and integrity. We strive to exceed expectations and build lasting partnerships that drive success for our customers and the communities we serve.
        </p>
    </section>

    <!-- Shared Values Section -->
    <section class="welcome-values">
        <div class="welcome-values__header">
            <h2>Our Shared Values</h2>
        </div>
        
        <div class="values-grid">
            <!-- Row 1: Serve Customers (featured/tall) + Own It & Win Together stacked -->
            <article class="value-card value-card--featured">
                <div class="value-card__icon">
                    <img src="~/images/customers-new.svg" alt="" />
                </div>
                <h3 class="value-card__name">Serve Customers</h3>
                <p class="value-card__tagline">Serve those who serve the public.</p>
            </article>

            <div class="values-stack">
                <article class="value-card">
                    <div class="value-card__icon">
                        <img src="~/images/own-it.svg" alt="" />
                    </div>
                    <h3 class="value-card__name">Own It</h3>
                    <p class="value-card__tagline">What we do matters, take pride in it.</p>
                </article>

                <article class="value-card">
                    <div class="value-card__icon">
                        <img src="~/images/win-together.svg" alt="" />
                    </div>
                    <h3 class="value-card__name">Win Together</h3>
                    <p class="value-card__tagline">Shared success beats solo effort.</p>
                </article>
            </div>

            <!-- Row 2: Evolve Every Day + Earn Trust (wide accent) -->
            <article class="value-card">
                <div class="value-card__icon">
                    <img src="~/images/evolve-grow.svg" alt="" />
                </div>
                <h3 class="value-card__name">Evolve Every Day</h3>
                <p class="value-card__tagline">Innovate, learn and improve.</p>
            </article>

            <article class="value-card value-card--accent">
                <div class="value-card__icon">
                    <img src="~/images/earn-trust.svg" alt="" />
                </div>
                <h3 class="value-card__name">Earn Trust</h3>
                <p class="value-card__tagline">Act with integrity and be reliable.</p>
            </article>
        </div>
    </section>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>
