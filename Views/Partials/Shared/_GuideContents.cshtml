@inherits UmbracoViewPage
@*
   Getting Started - Welcome Hub v2
   Structured layout with visual hierarchy and warmth
*@

<div class="welcome-hub">
    <!-- Hero Section -->
    <header class="welcome-hero">
        <div class="welcome-hero__icon">
            <i data-lucide="rocket"></i>
        </div>
        <div class="welcome-hero__content">
            <h1 class="welcome-hero__title">Getting Startred With Your Employee Handbook</h1>
            <p class="welcome-hero__subtitle">Your guide to policies, benefits, and everything that makes working at Neumo great.</p>
        </div>
        <div class="welcome-hero__notice">
            <i data-lucide="info"></i>
            <span>This is a living document that evolves with us. Review it periodically to stay informed.</span>
        </div>
    </header>

    <!-- Main Content Grid -->
    <div class="welcome-grid">
        <!-- Left Column: Quick Start Guide (Tall) -->
        <section class="welcome-card welcome-card--quickstart welcome-card--tall">
            <div class="welcome-card__header">
                <i data-lucide="zap"></i>
                <h2>Quick Start Guide</h2>
            </div>
            <div class="welcome-card__body">
                <div class="quickstart-steps">
                    <div class="quickstart-step">
                        <span class="quickstart-step__num">1</span>
                        <div class="quickstart-step__text">
                            <strong>Set Your Work State</strong>
                            <span>Use the selector in the top-right corner</span>
                        </div>
                    </div>
                    <div class="quickstart-step">
                        <span class="quickstart-step__num">2</span>
                        <div class="quickstart-step__text">
                            <strong>Browse Policies</strong>
                            <span>Navigate to Employee Handbook</span>
                        </div>
                    </div>
                    <div class="quickstart-step">
                        <span class="quickstart-step__num">3</span>
                        <div class="quickstart-step__text">
                            <strong>Search for Info</strong>
                            <span>Use the search bar for quick access</span>
                        </div>
                    </div>
                    <div class="quickstart-step">
                        <span class="quickstart-step__num">4</span>
                        <div class="quickstart-step__text">
                            <strong>View Full Policies</strong>
                            <span>Click any card for complete details</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Right Column: Stacked Cards -->
        <div class="welcome-stack">
            <!-- Key Terms -->
            <section class="welcome-card welcome-card--terms">
                <div class="welcome-card__header">
                    <i data-lucide="book-open"></i>
                    <h2>Key Terms</h2>
                </div>
                <div class="welcome-card__body">
                    <dl class="terms-list">
                        <div class="terms-list__item">
                            <dt>Manager</dt>
                            <dd>Your direct supervisor</dd>
                        </div>
                        <div class="terms-list__item">
                            <dt>HR Team</dt>
                            <dd>The human resources department and our professional employer organization</dd>
                        </div>
                        <div class="terms-list__item">
                            <dt>Leadership Team</dt>
                            <dd>CEO, CFO, CTO, Chief Product Officer, Chief Revenue Officer, SVP Human Resources, SVP Delivery & Operations, and VP of Corporate Development & Strategy</dd>
                        </div>
                        <div class="terms-list__item">
                            <dt>Company</dt>
                            <dd>Neumo, of course!</dd>
                        </div>
                    </dl>
                </div>
            </section>

            <!-- First 90 Days -->
            <section class="welcome-card welcome-card--highlight">
                <div class="welcome-card__header">
                    <i data-lucide="star"></i>
                    <h2>Your First 90 Days</h2>
                </div>
                <div class="welcome-card__body">
                    <p>Your employment relationship will be a learning experience for both you and us!</p>
                    <div class="callout-tip">
                        <i data-lucide="lightbulb"></i>
                        <div>
                            <strong>Ask Questions!</strong>
                            <p>About software, acronyms, processes, contacts — the only bad questions are the ones you don't ask.</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Employment Classification - Full Width -->
        <section class="welcome-card welcome-card--wide">
            <div class="welcome-card__header">
                <i data-lucide="users"></i>
                <h2>Employment Classification</h2>
            </div>
            <div class="welcome-card__body">
                <p class="welcome-card__intro">As an employee, you'll be classified as one of the following:</p>
                <div class="classification-pills">
                    <div class="classification-pill">
                        <div class="classification-pill__header">
                            <i data-lucide="clock"></i>
                            <h3>Full Time</h3>
                        </div>
                        <p>30+ hours/week. Eligible for all company benefits.</p>
                    </div>
                    <div class="classification-pill">
                        <div class="classification-pill__header">
                            <i data-lucide="clock-3"></i>
                            <h3>Part Time</h3>
                        </div>
                        <p>Under 30 hours/week. May be eligible for 401(k).</p>
                    </div>
                    <div class="classification-pill">
                        <div class="classification-pill__header">
                            <i data-lucide="calendar"></i>
                            <h3>Temporary</h3>
                        </div>
                        <p>Short-term (typically 6 months or less). Not benefit-eligible.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Employment Status -->
        <section class="welcome-card">
            <div class="welcome-card__header">
                <i data-lucide="briefcase"></i>
                <h2>Employment Status</h2>
            </div>
            <div class="welcome-card__body">
                <div class="status-split">
                    <div class="status-block">
                        <h3><span class="status-dot"></span>Exempt</h3>
                        <p>Salaried, not eligible for overtime. Includes executive, administrative, professional, and certain outside sales roles meeting FLSA requirements.</p>
                    </div>
                    <div class="status-block">
                        <h3><span class="status-dot"></span>Non-exempt</h3>
                        <p>Typically hourly, eligible for overtime (40+ hours/week). Manager approval required for overtime in advance.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Payment of Wages -->
        <section class="welcome-card">
            <div class="welcome-card__header">
                <i data-lucide="credit-card"></i>
                <h2>Payment of Wages</h2>
            </div>
            <div class="welcome-card__body">
                <div class="pay-facts">
                    <div class="pay-fact">
                        <i data-lucide="calendar-days"></i>
                        <div>
                            <strong>Bi-weekly</strong>
                            <span>Every other Friday</span>
                        </div>
                    </div>
                    <div class="pay-fact">
                        <i data-lucide="repeat"></i>
                        <div>
                            <strong>Mon–Sun Cycle</strong>
                            <span>Hourly paid in arrears</span>
                        </div>
                    </div>
                    <div class="pay-fact">
                        <i data-lucide="percent"></i>
                        <div>
                            <strong>Commission</strong>
                            <span>Paid when actively employed</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- HRIS Access - Accent Card -->
        <section class="welcome-card welcome-card--accent">
            <div class="welcome-card__body welcome-card__body--row">
                <div class="welcome-card__icon-large">
                    <i data-lucide="settings"></i>
                </div>
                <div class="welcome-card__text">
                    <h2>HR Information System</h2>
                    <p>Manage benefits, update personal info, request time off, view pay stubs, and more.</p>
                </div>
                <a href="https://workforcenow.adp.com" target="_blank" rel="noopener" class="welcome-cta">
                    <i data-lucide="external-link"></i>
                    Access ADP
                </a>
            </div>
        </section>
    </div>

    <!-- Footer CTA -->
    <footer class="welcome-footer">
        <div class="welcome-footer__content">
            <h3>Questions? We're Here to Help!</h3>
            <a href="#support" class="welcome-footer__btn">
                <i data-lucide="message-circle"></i>
                Go to FAQ & Support
            </a>
        </div>
    </footer>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>
